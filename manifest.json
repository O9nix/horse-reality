{
  "manifest_version": 3,
  "name": "HorseReality Tracker",
  "version": "1.1",
  "description": "Отслеживание действий на horsereality.com + Блокировка трекеров",
  
  "content_scripts": [
    {
      "matches": ["https://v2.horsereality.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://v2.horsereality.com/*"]
    }
  ],
  
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "https://v2.horsereality.com/*",
    "https://rawgit.com/*"
  ],

  "declarative_net_request": {
    "rule_resources": [{
      "id": "block_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}